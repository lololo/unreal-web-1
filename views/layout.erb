  <script type="text/javascript">
    // form label script
    $(document).ready(function(){
      $('input').focus(function(){
        var newValue = $(this).val();
        if($(this).val() == 'Your email address'){
          $(this).attr('value','');
        } else {
          $(this).val(newValue);
        }
      });

      $('input').blur(function(){
        var newValue = $(this).val();
        if($(this).val() == ''){
          $(this).attr('value','Your email address');
        } else {
          $(this).val(newValue);
        }
      });
    });
    // add screenshots if tablet or bigger
    if (document.documentElement.clientWidth > 600) {
      var aside = document.createElement('aside');
      document.getElementById('main').appendChild(aside);
      var fone = document.createElement('img');
      fone.src = '../images/iphone.png';
      fone.class = 'iphone';
      aside.appendChild(fone);
      var storeLink = document.createElement('a');
      storeLink.href = "http://itunes.apple.com/store/sharesapp";
      storeLink.class = "app-store"
      aside.appendChild(storeLink);
    }
  </script>
